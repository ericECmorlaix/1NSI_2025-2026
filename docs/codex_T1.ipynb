    "### Nombre de bits"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "a4e24bfb",
   "metadata": {},
   "outputs": [],
   "source": [
    "def nb_bits(n):\n",
    "    nb = 0\n",
    "    while n > 0 :\n",
    "        n = n // 2\n",
    "        nb += 1\n",
    "    return nb\n",
    "\n",
    "# Tests\n",
    "\n",
    "assert nb_bits(1) == 1\n",
    "assert nb_bits(2) == 2\n",
    "assert nb_bits(3) == 2\n",
    "assert nb_bits(4) == 3"
   ]
  }
